{
	"compilerOptions": {
		"target": "ESNext",
    "module": "Node16",
		"moduleResolution": "Node16",
    "esModuleInterop": true,
		"outDir": "dist/cjs",
		"rootDir": "src",
		"declaration": true,
		"declarationMap": true,
		"allowJs": false,
    "skipLibCheck": true
	},
	"exclude": ["**/*.spec.ts", "**/*.spec.tsx", "**/*.spec.js"],
	"include": ["src"]
}
